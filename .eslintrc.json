{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "ignorePatterns": [
    "/server.js",
    "/api/tools/mongooseConnector.js",
    "/api/tools/redisConnector.js"
  ],
  "rules": {
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-unused-vars": ["error", { "ignoreRestSiblings": true }],
    "no-console": ["error", { "allow": ["warn", "error"] }]
  }
}
